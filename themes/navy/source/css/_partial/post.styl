.post
  margin: 0 auto
  float: none
  @media screen
    max-width: 800px


.article-footer {
  margin-top: 20px;
  font-size: 0.9em;
  color: #666;
}
.article-footer i {
  margin-right: 5px;
  color: #888;
}
.article-categories a,
.article-tags a {
  margin-right: 8px;
  text-decoration: none;
  color: #007acc;
}
.article-categories a:hover,
.article-tags a:hover {
  text-decoration: underline;
}
